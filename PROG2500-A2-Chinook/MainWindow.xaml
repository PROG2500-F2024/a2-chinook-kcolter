<Window x:Class="PROG2500_A2_Chinook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PROG2500_A2_Chinook"
        mc:Ignorable="d"
        Title="Chinook Music Store" Height="650" Width="900">

    <Window.Resources>
        <ResourceDictionary>
                        
            
        </ResourceDictionary>
    </Window.Resources>
    
    
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem x:Name="File" Header="_File"></MenuItem>
                <MenuItem Header="_Pages">
                    <MenuItem x:Name="HomeButton" Header="_Home"></MenuItem>
                    <MenuItem x:Name="ArtistsButton" Header="_Artists"></MenuItem>
                    <MenuItem x:Name="AlbumsButton" Header="_Albums"></MenuItem>
                    <MenuItem x:Name="TracksButton" Header="_Tracks"></MenuItem>
                </MenuItem>
            </Menu>
            <ToolBar DockPanel.Dock="Left">
                <Button x:Name="HomeToolButton" ToolTip="Go to Home page"></Button>
                <Button x:Name="ArtistsToolButton" ToolTip="Go to Artists page"></Button>
                <Button x:Name="AlbumsToolButton" ToolTip="Go to Albums page"></Button>
                <Button x:Name="TracksToolButton" ToolTip="Go to Tracks page"></Button>
            </ToolBar>

            <Frame x:Name="mainFrame" DockPanel.Dock="Bottom" Width="auto" Height="auto"></Frame>
            
        </DockPanel>
    </Grid>
</Window>

