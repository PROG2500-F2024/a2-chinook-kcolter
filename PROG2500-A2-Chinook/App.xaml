<Application x:Class="PROG2500_A2_Chinook.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PROG2500_A2_Chinook"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <Style TargetType="Window">
            <Setter Property="Background" Value="SkyBlue"></Setter>
        </Style>
        
        <Style TargetType="Page">
            <Setter Property="Background" Value="SkyBlue"></Setter>
        </Style>

        <Style TargetType="DockPanel">
            <!--researched from https://stackoverflow.com/a/9599476 -->
            <Setter Property="LastChildFill" Value="False"></Setter>
        </Style>

        <Style TargetType="ListViewItem">
            <Setter Property="Padding" Value="10, 3, 10, 3"></Setter>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"></Setter>
        </Style>
        
    </Application.Resources>
</Application>
